extends ../home-layout.pug
block main
	div(class="main-center")
		div(class="mdl-card mdl-shadow--6dp huge-card tablet-90 web-70")
			div(class="mdl-card__title mdl-color--primary mdl-color-text--white ")
				h2(class="mdl-card__title-text") Registro
			div(class="mdl-card__supporting-text")
				form(action="/e/profile/register" method="POST" id="reg-form")
					div(class="mdl-textfield mdl-js-textfield margin-right mdl-textfield--floating-label")
						input(type="text" id="nickname" name="nickname" class="mdl-textfield__input")
						label(for="nickname" class="mdl-textfield__label") Nombre de usuario
					div(class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label")
						input(type="text" id="name" name="firstname" class="mdl-textfield__input")
						label(for="firstname" class="mdl-textfield__label") Nombre
					div(class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label")
						input(type="text" id="name" name="lastname" class="mdl-textfield__input")
						label(for="lastname" class="mdl-textfield__label") Apellido

					div(class="mdl-layout-spacer")

					div(class="mdl-textfield mdl-js-textfield margin-right mdl-textfield--floating-label")
						input(type="email" id="email" name="email" class="mdl-textfield__input")
						label(for="email" class="mdl-textfield__label") Correo electrónico
					div(class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label")
						input(type="email" id="re-email" name="re-email" class="mdl-textfield__input")
						label(for="re-email" class="mdl-textfield__label") Confirmar correo

					div(class="mdl-layout-spacer")

					div(class="mdl-textfield mdl-js-textfield margin-right mdl-textfield--floating-label")
						input(type="password" id="pwd" name="pwd" class="mdl-textfield__input")
						label(for="pwd" class="mdl-textfield__label") Contraseña
					div(class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label")
						input(type="password" id="re-pwd" name="re-pwd" class="mdl-textfield__input")
						label(for="re-pwd" class="mdl-textfield__label") Repetir contraseña
					p Al hacer click en Registrarse aceptas los #[a(class="mdl-color-text--primary" href="/terms" target="_blank") Términos y condiciones de uso] y la #[a(class="mdl-color-text--primary" href="/privacy" target="_blank") Pólítica de privacidad] de la plataforma e#[sup 3], así como respetarlas y seguirlas en todo momento.
			div(class="mdl-card__actions mdl-card--border ed-container justify")
				div(class="ed-item base-15 no-padding")
					button(id="reg-button" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored mdl-js-ripple-effect") Registrarse
				div(class="ed-item base-60 web-80")
					a(href="/login" class="mdl-button mdl-js-button mdl-button--accent mdl-js-ripple-effect") Iniciar sesión